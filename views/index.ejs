<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>前端页面监控系统</title>
    <link rel="stylesheet" href="/css/amazeui.min.css" />
    <link rel="stylesheet" href="/css/app.css">
</head>

<body data-type="generalComponents">
    <div class="tpl-page-container tpl-page-header-fixed">
        <div class="tpl-content-wrapper">
            <div class="tpl-portlet-components" id="pm">
                <div class="portlet-title">
                    <div class="caption font-green bold">
                        前端监控系统
                    </div>
                </div>
                <div class="tpl-block">
                    <div class="am-g">
                        <div class="am-u-sm-12 am-u-md-6">
                            <div class="am-btn-toolbar">
                                <div class="am-btn-group am-btn-group-xs">
                                    <button type="button" class="am-btn am-btn-default am-btn-success add"><span class="am-icon-plus"></span> 新增</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="am-g">
                        <div class="am-u-sm-12">
                            <form class="am-form">
                                <table class="am-table am-table-striped am-table-hover table-main">
                                    <thead>
                                        <tr>
                                            <th class="table-check" width="5%">
                                                <input type="checkbox" class="tpl-table-fz-check">
                                            </th>
                                            <th class="table-name" width="10%">名称</th>
                                            <th class="table-url" width="10%">URL</th>
                                            <th class="table-params" width="30%">参数</th>
                                            <th class="table-time" width="10%">周期/s</th>
                                            <th class="table-mail" width="10%">邮件组</th>
                                            <th class="table-state" width="10%">状态</th>
                                            <th class="table-set" width="15%">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% datas.forEach(function(item){ %>
                                        <tr>
                                            <td class="table-check">
                                                <input type="checkbox">
                                            </td>
                                            <td class="table-name"><%= item.name %></td>
                                            <td class="table-url"><a href="<%= item.url %>"><%= item.url %></a></td>
                                            <td class="table-params">
                                            <%= item.params %>
                                            </td>
                                            <td class="table-time"><%= item.time %></td>
                                            <td class="table-set">
                                                <% if (item.state == 0) { %>  
                                                    未开始
                                                <% } %> 
                                            </td>
                                            <td>
                                                <div class="am-btn-toolbar">
                                                    <div class="am-btn-group am-btn-group-xs">
                                                        <button type="button" class="am-btn am-btn-default am-btn-xs am-text-primary"><span class="am-icon-play"></span> <% if (item.state == 0) { %>  
                                                    开始
                                                <% } %> </button>
                                                        <button type="button" class="am-btn am-btn-default am-btn-xs am-text-secondary"><span class="am-icon-pencil-square-o"></span> 编辑</button>
                                                        <button type="button" class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span class="am-icon-trash-o"></span> 删除</button>
                                                        <button type="button" class="am-btn am-btn-default am-btn-xs am-hide-sm-only"><span class="am-icon-eye"></span> 查看报告</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>  
                                    </tbody>
                                </table>
                                <div class="am-cf">
                                    <div class="am-fr">
                                        <ul class="am-pagination tpl-pagination">
                                            <li class="am-disabled"><a href="#">«</a></li>
                                            <li class="am-active"><a href="#">1</a></li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                            <li><a href="#">4</a></li>
                                            <li><a href="#">5</a></li>
                                            <li><a href="#">»</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="tpl-alert"></div>
            </div>
        </div>
    </div>
    <div class="am-modal am-modal-no-btn" tabindex="-1" id="add-modal">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">新增任务
                <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
            </div>
            <div class="am-modal-bd">
                <form class="am-form am-form-horizontal">
                    <div class="am-form-group"></div>
                    <div class="am-form-group">
                        <label for="add-name" class="am-u-sm-2 am-form-label">任务名称</label>
                        <div class="am-u-sm-9">
                            <input type="text" id="add-name" placeholder="请输入任务名称，必须由小写字母组成" pattern="^[A-Za-z]+$" required>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group">
                        <label for="add-name" class="am-u-sm-2 am-form-label">任务描述</label>
                        <div class="am-u-sm-9">
                            <input type="text" id="add-desc" placeholder="请输入任务描述" required>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group">
                        <label for="add-url" class="am-u-sm-2 am-form-label">链接</label>
                        <div class="am-u-sm-9">
                            <input type="url" id="add-url" placeholder="请输入正确格式的网页链接" required>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group">
                        <label for="add-params" class="am-u-sm-2 am-form-label">参数</label>
                        <div class="am-u-sm-9">
                            <textarea id="add-params"  placeholder="请输入正确格式的参数" required></textarea>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group">
                        <label for="add-time" class="am-u-sm-2 am-form-label">周期</label>
                        <div class="am-u-sm-9">
                            <input type="number" id="add-time" placeholder="输入周期/s" required>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group">
                        <label for="add-time" class="am-u-sm-2 am-form-label">邮件组</label>
                        <div class="am-u-sm-9">
                            <input type="text" id="add-time" placeholder="输入邮件组，以;间隔" required>
                        </div>
                        <div class="am-u-sm-1"></div>
                    </div>
                    <div class="am-form-group"></div>
                    <div class="am-form-group">
                        <button class="am-btn am-btn-secondary" type="submit" id="add-submit">提交</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/amazeui.min.js"></script>
    <script src="/js/index.js"></script>
</body>

</html>
